@using System.Data
@model DataTable

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<h3>@Model.TableName</h3>

<table>
    <thead>
        <tr>
            @foreach (var item in Model.Columns)
            {
                <th>@item</th>
            }
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Rows.Count && i < 10; i++)
        {
            <tr>
                @foreach (var item in Model.Rows[i].ItemArray)
                {
                    <td>@item</td>
                }
            </tr>
        }
    </tbody>
</table>
