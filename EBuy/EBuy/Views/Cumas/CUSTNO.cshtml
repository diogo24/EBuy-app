<table class="table">
    <thead>
        <tr>
            <th>Column Name: Column Value</th>
        </tr>
    </thead>
    <tbody>
        @foreach (DataColumn item in Model.Columns)
        {
            var cell = row[item];
            <tr class="col-sm-4">                
                <td>@item:</td>
                <td>@cell</td>
            </tr>
        }
    </tbody>

</table>

<div>
