@using System.Data
@model DataTable

@{
    ViewBag.Title = "Index";
    var custNoObj = new { custno = ViewBag.CUSTNO };
    DataRow row = Model.Rows[0];
}

<h2>Index</h2>

<h3>@Model.TableName</h3>

